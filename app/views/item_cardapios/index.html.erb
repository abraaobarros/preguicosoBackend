<%- model_class = ItemCardapio -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name_pt) %></th>
      <th><%= model_class.human_attribute_name(:name_en) %></th>
      <th><%= model_class.human_attribute_name(:description_pt) %></th>
      <th><%= model_class.human_attribute_name(:description_en) %></th>
      <th><%= model_class.human_attribute_name(:key) %></th>
      <th><%= model_class.human_attribute_name(:price) %></th>
      <th><%= model_class.human_attribute_name(:category) %></th>
      <th><%= model_class.human_attribute_name(:estabelecimento_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @item_cardapios.each do |item_cardapio| %>
      <tr>
        <td><%= link_to item_cardapio.id, item_cardapio_path(item_cardapio) %></td>
        <td><%= item_cardapio.name_pt %></td>
        <td><%= item_cardapio.name_en %></td>
        <td><%= item_cardapio.description_pt %></td>
        <td><%= item_cardapio.description_en %></td>
        <td><%= item_cardapio.key %></td>
        <td><%= item_cardapio.price %></td>
        <td><%= item_cardapio.category %></td>
        <td><%= item_cardapio.estabelecimento_id %></td>
        <td><%=l item_cardapio.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_item_cardapio_path(item_cardapio), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      item_cardapio_path(item_cardapio),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_item_cardapio_path,
            :class => 'btn btn-primary' %>
